<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	 "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="log4jInitialization"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>${log4j.file}</value>
			</list>
		</property>
	</bean>


    <bean id="placeholderConfig2" class="com.moto.agent.snmp.util.PropertyPlaceholderConfigurerEX">
        <property name="location">
            <value>./conf/agent.conf</value>
        </property>
        <property name="fileEncoding">
            <value>utf-8</value>
        </property>
        <property name="secutiry">
            <value>false</value>
        </property>
        <property name="desEncrypt">
            <ref local="desEncrypt" />
        </property>
    </bean>

    <bean id="desEncrypt" class="com.moto.agent.snmp.util.DESEncrypt"/>

<!--	<bean id="placeholderConfig"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="./conf/agent.conf" />
	</bean>-->

